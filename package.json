    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "GPL-3.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && CI=1 npm test"
